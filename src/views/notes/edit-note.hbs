<div class="col-md-4 mx-auto">
  <div class="card">
    <div class="card-header">
      <a href="/notes">Regresar <i class="fas fa-arrow-circle-left"></i></a>

      <h3>Edit Note</h3>
    </div>
    <div class="card-body">
      <form action="/notes/edit-note/{{note._id}}?_method=PUT" method="POST">
        <input type="hidden" name="_method" value="PUT">
        <div class="form-group">
          <input type="text" name="title" class="form-control" placeholder="Title" value="{{note.title}}">
        </div>
        <div class="form-group">
          <textarea name="description" class="form-control">{{note.description}}</textarea>
        </div>
        <div class="form-group">
          <label>Meta: </label>
          <input type="number" name="quantity" min="1" max="10000" placeholder="0h" value="{{note.quantity}}">
        </div>
        <div class="form-group">
          <button class="btn btn-primary btn-block" type="submit">Editar</button>
        </div>
      </form>
    </div>
  </div>
</div>