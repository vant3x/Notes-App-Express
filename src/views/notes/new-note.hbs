<div class="col-md-5 mx-auto">
  <div class="card">
  <div class="card-header">
    <a href="/notes">Regresar <i class="fas fa-arrow-circle-left"></i></a>
    <h3>New Note</h3>
    
  </div>
  <div class="card-body">
    <form action="/notes/new-note" method="POST">
      <div class="form-group">
        <input type="text" name="title" class="form-control" placeholder="Title" autofocus>
      </div>
      <div class="form-group">
        <textarea name="description" class="form-control" placeholder="Description"></textarea>
      </div>
      <div class="form-group">
          <label for="quantity">Meta: </label>

          <input type="number" name="quantity" min="1" max="10000" placeholder="0h">

      </div>
      <div class="form-group">
        <button class="btn btn-primary btn-block" type="submit">Save</button>
      </div>
      
    </form>
    
  </div>
</div>
</div>